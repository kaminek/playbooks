#!/bin/bash

export PATH="/usr/games:$PATH"

echo "
 ██ ▄█▀▄▄▄       ███▄ ▄███▓ ██▓ ███▄    █ ▓█████  ██ ▄█▀      ███▄ ▄███▓▓█████
 ██▄█▒▒████▄    ▓██▒▀█▀ ██▒▓██▒ ██ ▀█   █ ▓█   ▀  ██▄█▒      ▓██▒▀█▀ ██▒▓█   ▀
▓███▄░▒██  ▀█▄  ▓██    ▓██░▒██▒▓██  ▀█ ██▒▒███   ▓███▄░      ▓██    ▓██░▒███
▓██ █▄░██▄▄▄▄██ ▒██    ▒██ ░██░▓██▒  ▐▌██▒▒▓█  ▄ ▓██ █▄      ▒██    ▒██ ▒▓█  ▄
▒██▒ █▄▓█   ▓██▒▒██▒   ░██▒░██░▒██░   ▓██░░▒████▒▒██▒ █▄ ██▓ ▒██▒   ░██▒░▒████▒
▒ ▒▒ ▓▒▒▒   ▓▒█░░ ▒░   ░  ░░▓  ░ ▒░   ▒ ▒ ░░ ▒░ ░▒ ▒▒ ▓▒ ▒▓▒ ░ ▒░   ░  ░░░ ▒░ ░
░ ░▒ ▒░ ▒   ▒▒ ░░  ░      ░ ▒ ░░ ░░   ░ ▒░ ░ ░  ░░ ░▒ ▒░ ░▒  ░  ░      ░ ░ ░  ░
░ ░░ ░  ░   ▒   ░      ░    ▒ ░   ░   ░ ░    ░   ░ ░░ ░  ░   ░      ░      ░
░  ░        ░  ░       ░    ░           ░    ░  ░░  ░     ░         ░      ░  ░
"
CHARACTERS=($(cowsay -l | sed '1d;s/ /\n/g'))
declare -i MAX=${#CHARACTERS[@]}

fortune | cowsay -f ${CHARACTERS[$[ ( $RANDOM % $MAX )  + 1 ]]}

